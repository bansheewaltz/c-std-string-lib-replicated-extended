#include "tests_includes.h"

#suite insert
#test insert_test1
  char buff1[] = "are YOU ok?";
  char buff2[] = "Yes, I am";
  char buff3[] = "are YOU ok?Yes, I am";
  char *result = s21_insert(buff1, buff2, 11);
  ck_assert_str_eq(result, buff3);

  if (result) {
    free(result);
  }

#test insert_test2
  char buff1[] = "";
  char buff2[] = "";
  char *buff3 = NULL;
  char *result = s21_insert(buff1, buff2, 11);
  ck_assert_ptr_eq(result, buff3);
  if (result) {
    free(result);
  }

#test insert_test3
  char buff1[] = "----------";
  char buff2[] = "+";
  char buff3[] = "+----------";
  char *result = s21_insert(buff1, buff2, 0);
  ck_assert_str_eq(result, buff3);
  if (result) {
    free(result);
  }

#test insert_test4
  char buff1[] = "areYOU ok?";
  char buff2[] = " ";
  char buff3[] = "are YOU ok?";
  char *result = s21_insert(buff1, buff2, 3);
  ck_assert_str_eq(result, buff3);
  if (result) {
    free(result);
  }

#test null_pointers
  char *result = s21_insert(s21_NULL, s21_NULL, 3);
  ck_assert(result == s21_NULL);
  if (result) {
    free(result);
  }


#test null_first_pointer
  char *result = s21_insert("123", s21_NULL, 3);
  ck_assert(result == s21_NULL);
  if (result) {
    free(result);
  }


#test null_second_pointer
  char *result = s21_insert(s21_NULL, "123", 3);
  ck_assert(result == s21_NULL);
  if (result) {
    free(result);
  }