#include "s21_tests.h"

#suite strcpy
#test classic
    char *src = "123";
    char res[10] = "";
    char exp[10] = "";

    strcpy(exp, src);
    s21_strcpy(res, src);
    ck_assert_str_eq(res, exp);


#test one_char
    char *src = "1";
    char res[10] = "";
    char exp[10] = "";

    strcpy(exp, src);
    s21_strcpy(res, src);
    ck_assert_str_eq(res, exp);


#test empty_src
    char *src = "";
    char res[10] = "123";
    char exp[10] = "123";

    strcpy(exp, src);
    s21_strcpy(res, src);
    ck_assert_str_eq(res, exp);


#test empty_src_empty_dest
    char *src = "";
    char res[10] = "";
    char exp[10] = "";

    strcpy(exp, src);
    s21_strcpy(res, src);
    ck_assert_str_eq(res, exp);


#test long_test
    char *src = "alksdfjl;dkasfjl;kasdljf ;af";
    char res[100] = "l;kasdfjl;kadsjf ";
    char exp[100] = "l;kasdfjl;kadsjf ";

    strcpy(exp, src);
    s21_strcpy(res, src);
    ck_assert_str_eq(res, exp);


#test null_terminator_in_middle
    char *src = "alksdfj\0l;dka\0sfjl;kasdljf ;af";
    char res[100] = "l;kasdfjl;kadsjf ";
    char exp[100] = "l;kasdfjl;kadsjf ";

    strcpy(exp, src);
    s21_strcpy(res, src);
    ck_assert_str_eq(res, exp);


#test full_capacity_minus_1
    char *src = "123";
    char res[4] = "";
    char exp[4] = "";

    strcpy(exp, src);
    s21_strcpy(res, src);
    ck_assert_str_eq(res, exp);


