#include "s21_tests.h"

#suite to_lower
#test to_lower_test1
  char buff1[] = "are YOU ok?";
  char buff2[] = "are you ok?";
  char *result = s21_to_lower(buff1);
  ck_assert_str_eq(result, buff2);
  if (result) {
    free(result);
  }

#test to_lower_test2
  char buff1[] = "";
  char buff2[] = "";
  char *result = s21_to_lower(buff1);
  ck_assert_str_eq(result, buff2);
  if (result) {
  free(result);
  }

#test to_lower_test3
