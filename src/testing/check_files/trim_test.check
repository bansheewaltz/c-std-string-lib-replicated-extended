#include "tests_includes.h"

#suite trim
#test trim_test1
  char buff1[] = "areYOU ok?";
  char buff2[] = "";
  char buff3[] = "areYOU ok?";
  char *result = s21_trim(buff1, buff2);
  ck_assert_str_eq(result, buff3);
  if (result) {
    free(result);
  }

